<Application x:Class="Calculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Calculator"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/DarkTheme.xaml"/>
                <ResourceDictionary Source="/Resources/WhiteTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="digitalFont">pack://application:,,,/Fonts/ds_digital/#DS-Digital</FontFamily>

            <Style x:Key="btnBorder" TargetType="Border">
                <Setter Property="BorderBrush" Value="#656361"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Margin" Value="#656361"/>
                <Setter Property="BorderBrush" Value="#656361"/>
            </Style>
            
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
