<Window x:Class="ImageHooverEffect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageHooverEffect"
        mc:Ignorable="d"
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#e5e5e5"/>
        </Grid.Background>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="/Images/im1.jpg"
                       Grid.Column="0"
                       Style="{StaticResource imageStyle}"/>

                <Image Source="/Images/im2.jpg"
                       Grid.Column="1"
                       Style="{StaticResource imageStyle}"/>

                <Image Source="/Images/im3.jpg"
                       Grid.Column="2"
                       Style="{StaticResource imageStyle}"/>

                <Image Source="/Images/im4.jpg"
                       Grid.Column="3"
                       Style="{StaticResource imageStyle}"/>

                <Image Source="/Images/im5.jpg"
                       Grid.Column="4"
                       Style="{StaticResource imageStyle}"/>

            </Grid>
        </StackPanel>

    </Grid>
</Window>
